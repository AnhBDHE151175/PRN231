@{
}
<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Jobs</h1>
    <p class="mb-4">
        Jobs Management
    </p>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary"></h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>JobTitle</th>
                            <th>MinSalary</th>
                            <th>MaxSalary</th>
                            <th>Skills</th>
                            <th>CreatedDate</th>
                            <th>ExpiredDate</th>
                        </tr>
                    </thead>

                    <tbody>
                        @{
                            foreach (var item in ViewBag.Data)
                            {
                                <tr>
                                    <td>@item.ID</td>
                                    <td>@item.JobTitle</td>
                                    <td>@item.MinSalary</td>
                                    <td>@item.MaxSalary</td>
                                    <td>@item.Skills</td>
                                    <td>@item.CreatedDate</td>
                                    <td>@item.ExpiredDate</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->